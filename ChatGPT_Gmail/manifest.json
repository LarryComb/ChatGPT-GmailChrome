{
    "name": "ChatGPT and Gmail",
    "version": "1.0.5",
    "description": "This is an extension to connect gmail to ChatGPT",
    "manifest_version": 3,
    "author": "Larry Cooley",
    "action": {
        "default_popup": "index.html"
    }, 
    "content_scripts": [
       { 
            "matches": ["https://mail.google.com/*"],
            "js": ["gmail-script.js"]
       },
       { 
            "matches": ["https://chat.openai.com/*"],
            "js": ["gpt-script.js"]
       }
       
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://mail.google.com/*",
        "https://chat.openai.com/*"
    ]




}